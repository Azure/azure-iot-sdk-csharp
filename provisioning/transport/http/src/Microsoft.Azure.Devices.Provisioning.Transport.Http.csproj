<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>Microsoft.Azure.Devices.Provisioning.Client.Transport</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputPath>.\bin\$(Configuration)</OutputPath>
    <DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <RootDir>$(MSBuildProjectDirectory)\..\..</RootDir>
  </PropertyGroup>

  <!-- delay sign the assembly for Release build -->
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' AND '$(AZURE_IOT_DONOTSIGN.ToUpper())' != 'TRUE' ">
    <AssemblyOriginatorKeyFile>$(RootDir)\35MSSharedLib1024.snk</AssemblyOriginatorKeyFile>
    <DelaySign>true</DelaySign>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <Version>1.1.4</Version>
    <Title>Microsoft Azure IoT Provisioning Device Client HTTP Transport</Title>
    <Authors>Microsoft</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>https://github.com/Azure/azure-iot-sdk-csharp/blob/master/LICENSE</PackageLicenseUrl>
    <Description>Provisioning Device Client Http Transport for Azure IoT Devices</Description>
    <PackageIconUrl>http://go.microsoft.com/fwlink/?LinkID=288890</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Azure/azure-iot-sdk-csharp</PackageProjectUrl>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageTags>Microsoft Azure IoT Provisioning Device Client .NET HTTP</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <shared>$(RootDir)\..\shared\src</shared>
    <generated>$(RootDir)\generated\src</generated>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(shared)\Logging.Common.cs">
      <Link>shared\Logging.Common.cs</Link>
    </Compile>
    <Compile Include="$(shared)\Logging.ProvisioningTransport.Common.cs">
      <Link>shared\Logging.ProvisioningTransport.Common.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\ClientApiVersionHelper.cs">
      <Link>shared\device\provisioning\transport\ClientApiVersionHelper.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\DeviceRegistrationResultConvertor.cs">
      <Link>shared\device\provisioning\transport\DeviceRegistrationResultConvertor.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\RegistrationState.cs">
      <Link>shared\device\provisioning\transport\RegistrationState.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\RegistrationOperationStatus.cs">
      <Link>shared\device\provisioning\transport\RegistrationOperationStatus.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\SecurityProviderSymmetricKey.cs">
      <Link>shared\device\provisioning\transport\SecurityProviderSymmetricKey.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\SymmetricKeyRegistrationResult.cs">
      <Link>shared\device\provisioning\transport\SymmetricKeyRegistrationResult.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\TpmRegistrationResult.cs">
      <Link>shared\device\provisioning\transport\TpmRegistrationResult.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\X509CertificateInfo.cs">
      <Link>shared\device\provisioning\transport\X509CertificateInfo.cs</Link>
    </Compile>
    <Compile Include="$(shared)\device\provisioning\transport\X509RegistrationResult.cs">
      <Link>shared\device\provisioning\transport\X509RegistrationResult.cs</Link>
    </Compile>    
    <Compile Include="$(shared)\device\provisioning\transport\ProvisioingSasBuilder.cs">
      <Link>shared\device\provisioning\transport\ProvisioingSasBuilder.cs</Link>
    </Compile>
    <Compile Include="$(shared)\DefaultWebProxySettings.cs" />
    <Compile Include="$(generated)\Models\DeviceRegistration.cs">
      <Link>generated\Models\DeviceRegistration.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <!-- FXCop -->
    <PackageReference Include="Microsoft.Azure.Devices.Shared" Version="1.15.1" />
    <PackageReference Condition=" '$(Configuration)' == 'Debug' " Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.1" />
    <PackageReference Include="Microsoft.Rest.ClientRuntime" Version="2.3.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\device\src\Microsoft.Azure.Devices.Provisioning.Client.csproj" />
  </ItemGroup>

</Project>
