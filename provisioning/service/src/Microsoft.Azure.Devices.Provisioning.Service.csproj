<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- TODO #176: Enable warnings as errors. -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors> 
    <!-- TODO #255: Multiple public APIs still missing documentation:
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputPath>.\bin\$(Configuration)</OutputPath>
    <DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile> -->
  </PropertyGroup>

  <!-- delay sign the assembly for Release build -->
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <AssemblyOriginatorKeyFile>..\..\..\35MSSharedLib1024.snk</AssemblyOriginatorKeyFile>
    <DelaySign>true</DelaySign>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>1.0.1</VersionPrefix>
    <Title>Microsoft Azure IoT Provisioning Service Client SDK</Title>
    <Authors>Microsoft</Authors>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>https://github.com/Azure/azure-iot-sdk-csharp/blob/master/LICENSE</PackageLicenseUrl>
    <Description>Provisioning Service Client SDK for Azure IoT</Description>
    <PackageIconUrl>http://go.microsoft.com/fwlink/?LinkID=288890</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Azure/azure-iot-sdk-csharp</PackageProjectUrl>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageTags>Microsoft Azure IoT Provisioning Service Client .NET HTTP</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\..\common\src\service\CommonResources.cs" Link="Common\CommonResources.cs" />
    <Compile Include="..\..\..\common\src\service\EventTraceActivity.cs" Link="Common\EventTraceActivity.cs" />
    <Compile Include="..\..\..\common\src\service\Resources.Designer.cs" Link="Common\Resources.Designer.cs" />
    <Compile Include="..\..\..\common\src\service\StringValidationHelper.cs" Link="Common\StringValidationHelper.cs" />
    <Compile Include="..\..\..\common\src\service\Utils.cs" Link="Common\Utils.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />

    <!-- FXCop TODO: #176
    <PackageReference Condition=" '$(Configuration)' == 'Debug' " Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.0-beta2" />
    -->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\shared\Microsoft.Azure.Devices.Shared.NetStandard\Microsoft.Azure.Devices.Shared.NetStandard.csproj">
      <Project>{91dfb837-d8a3-4f54-ae0d-45c95acd0c2a}</Project>
      <Name>Microsoft.Azure.Devices.Shared.NetStandard</Name>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\ApiResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ApiResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\ApiResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ApiResources.Designer.cs</LastGenOutput>
      <CustomToolNamespace>Microsoft.Azure.Devices</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

</Project>
