<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">net7.0;net6.0;netcoreapp3.1;net472</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' != 'Windows_NT'">net7.0;net6.0;netcoreapp3.1</TargetFrameworks>
    <LangVersion>9.0</LangVersion>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AnalysisLevel>latest-minimum</AnalysisLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <IsPackable>false</IsPackable>
    <!-- We will turn on this suppression once we are ready to GA-->
    <!-- Suppress framework end of life warnings as we have to keep supporting these frameworks for our customers -->
    <!-- <CheckEolTargetFramework>false</CheckEolTargetFramework> -->
  </PropertyGroup>

  <!--Project reference dependencies-->
  <ItemGroup>
    <ProjectReference Include="..\src\Microsoft.Azure.Devices.Provisioning.Service.csproj" />
  </ItemGroup>

  <!--Nuget package dependencies-->
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.4.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="2.2.10" />
    <PackageReference Include="MSTest.TestFramework" Version="2.2.10" />
    <PackageReference Include="FluentAssertions" Version="6.8.0" />
  </ItemGroup>

</Project>
